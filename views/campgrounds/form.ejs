<% layout('layouts/boilerplate') %>
<div class="row mb-3">
    <h1 class="text-center">New campground</h1>
    <div class="col-md-6 offset-md-3">
    <form action="/campground" method="post" novalidate class="validate-form" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title1" class="form-label">Title</label>
            <input type="text" id="title1" name="title" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div>
        </div>
        <div class="mb-3">
            <label for="location1" class="form-label">Location</label>
            <input type="text" id="location1" name="location"  class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div>
        </div>
        <!-- <div class="mb-3">
            <label for="image1" class="form-label">Image URL</label>
            <input type="text" id="image1" name="image"  class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div>
        </div> -->
        
        <div class="mb-3">
            <label for="price1" class="form-label">Price</label>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">â‚¹</span>
                <input type="number" class="form-control" id="price1" placeholder="Price" aria-label="Price" aria-describedby="basic-addon1" name="price" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="description1" class="form-label">Description</label>
            <textarea type="text" id="description1" name="description"  class="form-control" required></textarea>
            <div class="valid-feedback">
                Looks good!
              </div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Image(s)..</label>
            <input type="file" class="form-control" name="image" id="image" multiple>
        </div>

        

        <button type="submit" class="btn btn-success">Add New Campground</button>
        <button class="btn btn-danger"><a href="/campground">Cancel</a></button>
    </form>
    
</div>
</div>
