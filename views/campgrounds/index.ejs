<% layout('layouts/boilerplate') %>
<div class="mb-2" id="cluster-map"></div>
    <h1>All Campgrounds</h1>
    <button class="btn btn-success m-3"><a href="/campground/new" style="color:white">Create New Ground</a></button>
<%for(let campground of campgrounds){ %>
    <div class="card mb-3" >
        <div class="row">
            <div class="col-md-4">
                <img crossorigin="anonymous" src="<%= campground.images.length>0 ? campground.images[0].url : '' %>" alt="" style="height: 300px; width:300px">
            </div>
            <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    <%= campground.title %>
                </h5>
                <p><%= campground.description %></p>
                <p><small class="text-muted"><%= campground.location %></small></p>
                <a href="campground/<%= campground._id %>" class="btn btn-primary">View <%= campground.title %></a>
            </div>
            </div>
        </div>
    </div>
<% } %>

<script>
    const mapBoxToken = '<%- process.env.MapBox_KEY %>'
    const campgrounds = {features:<%- JSON.stringify(campgrounds) %>}
</script>
<script src="/js/clusterMap.js"></script>

